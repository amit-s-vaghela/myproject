<?xml version="1.0"?> 
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">

  <table name="register_details" resource="default" engine="innodb" comment="Register Details Table">
        <column xsi:type="smallint" name="id" padding="6" unsigned="false" nullable="false" identity="true" comment="ID"/>

        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="varchar" name="age" nullable="false" length="255" comment="Age"/>
        <column xsi:type="varchar" name="mobile" nullable="false" length="15" comment="Mobile"/>
        <column xsi:type="datetime" name="birthdate" nullable="false" comment="Birth Date"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">   <column name="id"/> </constraint>
    </table>
 </schema>
